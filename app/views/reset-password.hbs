<body class='auth'>
	<div class="login-screen">
		<img src="/assets/images/logo.png" alt="Conscious Logo" class='auth-logo'>

		<div class="box-form">
			<div class="inner">
				<h3 class='mb-4 mb-md-5 text-center'>Reset password</span></h3>
				<form action="#" method="post" id='register'>
					<div class='form-group'>
						<div class="d-flex">
							<label for='password' class='form-label'>Password</label>
						</div>
						<div class="input-group mb-2">
							<div class="input-group-prepend">
								<div class="input-group-text">
									<span class='icon-padlock'></span>
								</div>
							</div>
							<input type="password" class="form-control" id="password" name='password'
								placeholder="Enter your password" />
						</div>
					</div>
					<div class='form-group'>
						<div class="d-flex">
							<label for='password_conf' class='form-label'>Confirm password</label>
						</div>
						<div class="input-group mb-2">
							<div class="input-group-prepend">
								<div class="input-group-text">
									<span class='icon-padlock'></span>
								</div>
							</div>
							<input type="password" class="form-control" id="password_conf" name='passwordConf'
								placeholder="Confirm your password" />
						</div>
						{{payload.message}}
						<button type='submit' class='button'>Reset Password</button>
					</div>
				</form>
			</div>
			<div class="footer">
				<p>Already have an account?</p>
				<a href="/" class='button button-sm'>Sign in</a>
			</div>
		</div>

		<ul class='footer-menu'>
			<li><a href='/terms'>Terms of service</a></li>
			<li><a href='/privacy'>Privacy</a></li>
			<li><a href='/cookies'>Cookies</a></li>
		</ul>
		<p class='copyright'>Â© 2019 Conscious - Transformational Technologies LLC.</p>
	</div>

	<script src='/assets/js/sign-up.js'></script>
</body>