<body class='heart-monitor bg-particles'>
	{{> nav nav-dark=true}}

        <div id="guideRing" class="guideRing" style="margin-top: 10rem;">
            <div class="circle-black-overlay"></div>
            <div class="canvas-holder">
                <div class="silhouette"></div>
                <video hidden id="webcam" width="320" height="240"></video>
                    <canvas class="videoFeed" id="canvas" width="320" height="240"></canvas>
            </div>
        </div>  

        <div class="bottom-stats">
				<div class="inner">
					<div class="header">
						<span class='live-button'>live</span>
						<p>Heart Rate Stats</p>
					</div>
					<div class="boxes">
						<div class="box">
							<div class="box-inner">
								<span class="box-icon icon-resize t-green"></span>
								<div style="color: white;">
									Current Heart Rate
									<p class="box-description" id='heartRate'>
										Loading...
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<a href="/dashboard" class='button-ghost'>Finish</a>
        <script src="/assets/js/heart-monitor.js" type="text/javascript"></script>
</body>